<h2>Similar Products</h2>
<table class="table table-content">







    <div class="row product-container">
        @foreach (var item in similarProducts)
        {
            <div class="col-md-3 col-sm-3 col-xs-6" style="">
                <div class="thumbnail product-item" style="height:300px">
                    <img class="img-responsive" title="Click to View Product detail" style="cursor:pointer:height:120px;width:150px"
                         src="~/Images/@item.images" />
                    <div class="caption">
                        <h5> @item.Description</h5>
                        <p>Price: @item.Price Tk</p>
                        <p>Category: @item.category</p>
                        @{
                            if (Session["clientname"] != null)
                            {

                                @Html.ActionLink("Add-to-Cart", "OrderNow", "ShoppingCart", new { id = item.Productid }, null)

                            }


                        }

                        @Html.ActionLink("View Detail", "Details", "products", new { id = item.Productid }, null)
                        @Html.ActionLink("Reviews", "Index", "comments", new { id = item.Productid }, null)



                    </div>



                </div>
            </div>


        }

    </div>

</table>



